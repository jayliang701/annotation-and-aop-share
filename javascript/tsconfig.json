{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
